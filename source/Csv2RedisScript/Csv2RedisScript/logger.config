<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
  <log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout name="PatternLayout" type="log4net.Layout.PatternLayout">
        <ConversionPattern value="%utcdate{yyyy-MM-dd HH:mm:ss.ff}UTC - [%level] - %message%newline" />
      </layout>
    <Threshold value="INFO" />
    </appender>
    <appender name="NormalFile" type="log4net.Appender.FileAppender" >
      <File type="log4net.Util.PatternString">
        <ConversionPattern value="%date{yyyy-MM-dd-HHmmss}.log" />
      </File>
      <Layout name="PatternLayout" type="log4net.Layout.PatternLayout">
        <ConversionPattern value="%utcdate{yyyy-MM-dd HH:mm:ss.ff}UTC - [%level] - %message%newline" />
      </Layout>
    </appender>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
      <Threshold value="INFO" />
      <mapping>
        <level value="INFO" />
        <forecolor value="White" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <forecolor value="Red" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <forecolor value="Yellow" />
      </mapping>
      <mapping>
        <level value="FATAL" />
        <forecolor value="Red" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <forecolor value="DarkBlue" />
      </mapping>
    <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%utcdate{yyyy-MM-dd HH:mm:ss.ff}UTC - [%level] - %message%newline" />
    </layout>
</appender>
    <root>
      <appender-ref ref="Console" />
      <!--<appender-ref ref="ColoredConsoleAppender" />-->
      <appender-ref ref="NormalFile" />
    </root>
  </log4net>
</configuration>
      