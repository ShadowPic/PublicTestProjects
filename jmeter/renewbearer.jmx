        <JSR223Sampler guiclass="TestBeanGUI" testclass="JSR223Sampler" testname="Set Bearer Token Status" enabled="true">
          <stringProp name="cacheKey">true</stringProp>
          <stringProp name="filename"></stringProp>
          <stringProp name="parameters"></stringProp>
          <stringProp name="script">import  java.time.LocalDateTime;
import java.util.Date;

LocalDateTime RightNow=LocalDateTime.now();
String renewBearer = vars.get(&quot;RenewBearerTracker&quot;); 
if(renewBearer == &quot;start&quot;)
{
	vars.put(&quot;TimeToRenew&quot;,&quot;true&quot;);
	Integer expireInMinutes = vars.get(&quot;ExpireInMinutes&quot;).toInteger();
	vars.put(&quot;RenewBearerTracker&quot;,RightNow.plusMinutes(expireInMinutes).toString());
	return;
};

Earlier= LocalDateTime.parse(renewBearer);

timeToRenew=Earlier&lt;RightNow;
vars.put(&quot;TimeToRenew&quot;,timeToRenew.toString());</stringProp>
          <stringProp name="scriptLanguage">groovy</stringProp>
        </JSR223Sampler>
